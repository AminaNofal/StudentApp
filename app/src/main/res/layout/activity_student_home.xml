<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Student"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/btnViewSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Schedule"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/btnViewMarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Marks"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnUploadAssignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Assignment"
        android:layout_marginTop="16dp" />

    <!-- مساحة فارغة تدفع الزر الأخير للأسفل -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="16dp" />
</LinearLayout>
